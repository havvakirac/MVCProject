@model IEnumerable<SUNetwork.Models.ModelMessage>

<div class="Anadiv">

    <table class="table">
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @if (item.PhotoPath != "")
                    {
                        <img src="@Url.Content(item.PhotoPath)" style="width:80px; height:80px; border-radius: 300px; -webkit-border-radius:300px;-moz-border-radius:300px;"  />
                    }
                    else
                    {
                        <img src="~/Content/user.png" style="width:80px; height:80px; border-radius: 300px; -webkit-border-radius:300px;-moz-border-radius:300px;"  />
                    }
                    @*<img src="@Url.Content(item.PhotoPath) " style="width:80px; height:80px; border-radius: 300px; -webkit-border-radius:300px;-moz-border-radius:300px;" />*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameSurname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>

                    @Html.ActionLink("Gör", "SendMessage", new { Controller = "UsersFriendship", id = item.UserId })

                </td>
            </tr>
        }
    </table>
</div>


<style>
    .Anadiv {
        width: 800px;
        height: 100%;
        /*align-content: center;*/
        margin-top: 1px;
        margin-left: auto;
        margin-right: auto;
        background-color: whitesmoke;
        border-bottom-style: groove;
        border-left-style: inset;
        margin-top: 10px;
        padding-top: 10px;
        padding-left: 10px;
        padding-right: 10px;
        border: 1px solid black;
        box-shadow: 0 0 6px 4px #70767c;
        /*background-color: rgba(216, 223, 234, 0.08);*/
        text-align: justify;
        text-align-last: left;
        box-shadow: 20px;
    }
</style>