@model SUNetwork.Models.ACTIVATION

@{
    ViewBag.Title = "Activation";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="satir">
        <div class="form-horizontal">
            <br />
            <h3>Aktivasyon kodu mail adresinize gönderilmiştir.</h3>
            <br />
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CODE, new { htmlAttributes = new { @class = "form-control", @Placeholder = "Aktivasyon Kodu" } })
                    @Html.ValidationMessageFor(model => model.CODE, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <input type="submit" value="Hesabı Aktifleştir" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    .satir {
        padding-left: 350px;
    }

    body {
        background-color: cadetblue;
        color: white;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>



