@model IEnumerable<SUNetwork.Models.USERS_GROUP>



<div class="Anadiv">

    <table class="table">
        <tr>
            <th>
                Grup Adı
            </th>
            <th>
                Oluşturma Tarihi
            </th>

            @*<th>
               Güncelleme Tarihi
            </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GROUP_NAME)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CREATE_DATE)
                </td>

                @*<td>
                    @Html.DisplayFor(modelItem => item.UPDATE_DATE)
                </td>*@
                <td>
                    @Html.ActionLink("Üye Ekle", "SearchDetailUserProfileForGroup", new { id = item.ID }) |
                    @Html.ActionLink("Grup Üyeleri", "GetMembers", new { id = item.ID }) |
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Grup Paylaşımları", "ActivityGroup", new { id = item.ID }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</div>

<style>
    .Anadiv {
        width: 800px;
        height: 100%;
        /*align-content: center;*/
        margin-top: 1px;
        margin-left: auto;
        margin-right: auto;
        background-color: whitesmoke;
        border-bottom-style: groove;
        border-left-style: inset;
        margin-top: 10px;
        padding-top: 10px;
        padding-left: 10px;
        padding-right: 10px;
        border: 1px solid black;
        box-shadow: 0 0 6px 4px #70767c;
        /*background-color: rgba(216, 223, 234, 0.08);*/
        text-align: justify;
        text-align-last: left;
        box-shadow: 20px;
    }
</style>