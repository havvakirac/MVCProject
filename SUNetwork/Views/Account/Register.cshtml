@model SUNetwork.Models.RegisterViewModel
@{
    ViewBag.Title = "Kayıt Ol";
}


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    @Html.AntiForgeryToken()


    <div class="satir">
      
        <h3>SUNETWORK Yeni Hesap</h3>
        <hr />
        <h4>Yeni bir hesap oluşturun.</h4>

        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })*@
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @Placeholder = "Eposta" })
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @Placeholder = "Şifre" })
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })*@
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @Placeholder = "Yeniden Şifre" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input type="submit" class="btn btn-default" value="Kayıt Ol" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    .satir {
        padding-left: 350px;
    }

    body {
        background-color: cornflowerblue;
        color: black;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>