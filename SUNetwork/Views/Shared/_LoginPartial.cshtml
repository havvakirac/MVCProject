@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li><input class="eeee" type="text" id="txtName" /></li>
            <li>@Html.ActionLink("Ara", "SearchProfile", "UsersFriendship", null, new { onclick = "this.href += '?name=' + document.getElementById('txtName').value;" })</li>
             <li>
                @Html.ActionLink(" " + User.Identity.GetUserName() + " ", "ChangePassword", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Çıkış</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Kayıt Ol", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Giriş Yap", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}

<style>
    .eeee {
        margin-top: 10px;
    }
</style>

