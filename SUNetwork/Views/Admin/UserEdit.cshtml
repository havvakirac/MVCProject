@model SUNetwork.Models.USERS

@{
    ViewBag.Title = "Profil Güncelle";
}

@*<h2>Edit</h2>*@


@using (Html.BeginForm("UserEdit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="Anadiv">
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.USER_ID)
            @Html.HiddenFor(model => model.EMAIL)
            @Html.HiddenFor(model => model.UPDATE_DATE)


            <div class="form-group">
                @Html.LabelFor(model => model.IS_PRIVATE, "Gizlilik Modu", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.USER_TYPE, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model => model.IS_PRIVATE, ViewBag.IsPrivateList as SelectList, "Seçiniz")
                    @Html.ValidationMessageFor(model => model.IS_PRIVATE, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NAME, "Adı", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NAME, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SURNAME, "Soyadı", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SURNAME, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SURNAME, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.USER_TYPE, "Kullanıcı Durumu", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.USER_TYPE, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model => model.USER_TYPE, ViewBag.UserTypeList as SelectList, "Seçiniz")
                    @Html.ValidationMessageFor(model => model.USER_TYPE, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.START_DATE, "Başlama Yılı", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.START_DATE, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model => model.START_DATE, ViewBag.StartList as SelectList, "Seçiniz", new { @onchange = "BaslamaYili()" })
                    @Html.ValidationMessageFor(model => model.START_DATE, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FINISH_DATE, "Bitiş Yılı", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.FINISH_DATE, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model => model.FINISH_DATE, ViewBag.FinishList as SelectList, "Seçiniz")
                    @Html.ValidationMessageFor(model => model.FINISH_DATE, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PHOTO_PATH, "Profil Resmi", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                    <input type="file" name="PHOTO_PATH" id="PHOTO_PATH" accept=".jpg,.png,.JPEG,.jpeg" class="form-control" />
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.GENDER, "Cinsiyet", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.GENDER, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model => model.GENDER, ViewBag.GenderList as SelectList, "Seçiniz")
                    @Html.ValidationMessageFor(model => model.GENDER, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DEPARTMAN_CODE, "Bölüm", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.DEPARTMAN_CODE, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model => model.DEPARTMAN_CODE, ViewBag.DepartmanList as SelectList, "Seçiniz")
                    @Html.ValidationMessageFor(model => model.DEPARTMAN_CODE, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.JOB, "Meslek", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.JOB, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model => model.JOB, ViewBag.JobList as SelectList, "Seçiniz")
                    @Html.ValidationMessageFor(model => model.JOB, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Kaydet" class="btn btn-default" />
                </div>
            </div>
        </div>

        @*<div>
            @Html.ActionLink("Profil", "UserDetails" ,new { Controller = "Admin", id=ViewBag.id })
        </div>*@
    </div>
}



