@model SUNetwork.Models.GROUP_ACTIVITY

@{
    ViewBag.Title = "Grup Paylaşımı Sil";
}
<h3>Gönderiyi silmek istediğinize emin misiniz?</h3>
<div class="Anadiv">
    <h4>GROUP_ACTIVITY</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Grup Id
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GROUP_ID)
        </dd>

        @*<dt>
            Kişi Id
        </dt>

        <dd>
            @Html.DisplayFor(model => model.USER_ID)
        </dd>*@

        <dt>
            Gönderi
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DESCRIPTION)
        </dd>

        <dt>
            Oluşturma Tarifi
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UPDATE_DATE)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Gönderiyi Sil" class="btn btn-default" /> |
            @Html.ActionLink("Grup Paylaşımları", "GroupActivityList")
        </div>
    }
</div>


