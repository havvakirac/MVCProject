@model IEnumerable<SUNetwork.Models.USERS>

@{
    ViewBag.Title = "Kullanıcılar";
}

<div class="Anadiv" >
    <table class="table">
        <tr>
            <th>
            </th>
            <th>
                Ad
            </th>
            <th>
                Soyad
            </th>
            <th>
                Durum
            </th>
            <th>
                Kişi Tipi
            </th>
            <th>
                Başlama Yılı
            </th>
            <th>
                Bitiş Yılı
            </th>

            <th>
                Cinsiyet
            </th>
            <th>
                Meslek
            </th>
            <th>
                Güncelleme Tarihi
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.PHOTO_PATH != "")
                    {
                    <img src="@Url.Content(item.PHOTO_PATH)" width="50" height="50" alt="" />
                    }
                    else
                    {
                        <img src="~/Content/user.png" width="50" height="50" alt=""/>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NAME)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SURNAME)
                </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.STATUS_CODE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.USER_TYPE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.START_DATE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FINISH_DATE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GENDER)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.JOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UPDATE_DATE)
                </td>
                <td>
                    @Html.ActionLink("Kişi Düzenle", "UserEdit", new { Controller = "Admin", id = item.USER_ID })
                </td>
                <td>
                    @Html.ActionLink("Kişi Bilgileri", "UserDetails", new { Controller = "Admin", id = item.USER_ID })
                </td>
                <td>
                    @Html.ActionLink("Kişiyi Sil", "UserDelete", new { Controller = "Admin", id = item.USER_ID })
                </td>
                <td>
                    @Html.ActionLink("Admin Yap", "AddAdmin", new { Controller = "Admin", id = item.USER_ID })
                </td>
            </tr>
        }
    </table>
</div>



<style>
    .Anadiv {
        width: 110%;
        height: 100%;
        /*align-content: center;*/
        /*margin-top: 1px;
        margin-left: auto;
        margin-right: auto;*/
        background-color: whitesmoke;
        border-bottom-style: groove;
        border-left-style: inset;
        margin-top: 1px;
        padding-top: 1px;
        padding-left: 1px;
        padding-right: 1px;
        border: 1px solid black;
        box-shadow: 0 0 6px 4px #70767c;
        /*background-color: rgba(216, 223, 234, 0.08);*/
        text-align: justify;
        text-align-last: left;
        box-shadow: 20px;
    }

</style>
