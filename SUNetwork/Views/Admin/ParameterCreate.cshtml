@model SUNetwork.Models.PARAMETER

@{
    ViewBag.Title = "Parameter Ekle";
}


@using (Html.BeginForm())
{ 
        @Html.AntiForgeryToken()
    <div class="Anadiv">

        <h4>PARAMETER</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.PARAMETER_CODE, htmlAttributes: new { @class = "control-label col-md-2", })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PARAMETER_CODE, new { htmlAttributes = new { @class = "form-control", @Placeholder = "P_DEPARTMAN, P_JOB, P_USER_TYPE" } })
                @Html.ValidationMessageFor(model => model.PARAMETER_CODE, "", new { @class = "text-danger" })
                <h6>P_DEPARTMAN, P_JOB, P_USER_TYPE şeklinde parametre kodunu</h6>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CODE, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CODE, new { htmlAttributes = new { @class = "form-control", @Placeholder = "BilMuh, Dr, OG" } })
                @Html.ValidationMessageFor(model => model.CODE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VALUE, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VALUE, new { htmlAttributes = new { @class = "form-control", @Placeholder = "Bilgisayar Müh., Öğrenci, Öğrenci " } })
                @Html.ValidationMessageFor(model => model.VALUE, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Oluştur" class="btn btn-default" />
            </div>
        </div>
        <div>
            @Html.ActionLink("Parametre Listesi", "ParameterList")
        </div>
    </div>
}




<style>
    .Anadiv {
        width: 800px;
        height: 100%;
        /*align-content: center;*/
        margin-top: 1px;
        margin-left: auto;
        margin-right: auto;
        background-color: whitesmoke;
        border-bottom-style: groove;
        border-left-style: inset;
        margin-top: 10px;
        padding-top: 10px;
        padding-left: 10px;
        padding-right: 10px;
        border: 1px solid black;
        box-shadow: 0 0 6px 4px #70767c;
        /*background-color: rgba(216, 223, 234, 0.08);*/
        text-align: justify;
        text-align-last: left;
        box-shadow: 20px;
    }

    td, th {
        padding: 0;
        width: 200px;
    }
</style>